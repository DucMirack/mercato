%h1 Listing bids

%table
  %thead
    %tr
      %th Price
      %th Is win
      %th Nb round
      %th User
      %th Player
      %th
      %th
      %th

  %tbody
    - @bids.each do |bid|
      %tr
        %td= bid.price
        %td= bid.is_win
        %td= bid.nb_round
        %td= bid.user
        %td= bid.player
        %td= link_to 'Show', bid
        %td= link_to 'Edit', edit_bid_path(bid)
        %td= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Bid', new_bid_path
