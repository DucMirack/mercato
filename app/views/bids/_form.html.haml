= form_for @bid do |f|
  - if @bid.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bid.errors.count, "error")} prohibited this bid from being saved:"
      %ul
        - @bid.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :is_win
    = f.check_box :is_win
  .field
    = f.label :nb_round
    = f.number_field :nb_round
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :player
    = f.text_field :player
  .actions
    = f.submit 'Save'
